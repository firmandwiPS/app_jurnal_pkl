<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Judul -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitleUbah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Laporan PKL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingBottom="24dp" />

        <!-- Info siswa (read-only) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfoSiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIS - Nama - Sekolah"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Input Nilai -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nilai Akhir"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNilaiUbah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Pilih File Laporan Baru -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPilihLaporanUbah"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti File Laporan (Opsional)"
            android:layout_marginBottom="4dp"
            app:icon="@drawable/ic_file_upload"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNamaFileLaporanUbah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gunakan file sebelumnya"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Pilih File Project Baru -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPilihProjectUbah"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti File Project (Opsional)"
            android:layout_marginBottom="4dp"
            app:icon="@drawable/ic_file_upload"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNamaFileProjectUbah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gunakan file sebelumnya"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Simpan Perubahan -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimpanPerubahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Perubahan"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp" />

    </LinearLayout>
</ScrollView>
