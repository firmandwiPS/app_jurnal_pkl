<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="24dp"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/homeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="APLIKASI JURNAL PKL LAB RPL"
            android:textColor="#3F51B5"
            android:textSize="23dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#808080"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.5" />


        <!-- Card: Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_card_rounded"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Date & Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senin, 23 Juni 2025"
                    android:textColor="#FFFFFF"
                    android:textSize="31sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="14:07:32"
                    android:textColor="#FFEB3B"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- User Image -->
            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_yellow_circle" />

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="match_parent"
                    android:layout_height="103dp"
                    android:layout_gravity="center"
                    android:contentDescription="User Image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />
            </FrameLayout>
        </LinearLayout>

        <!-- Tentang BBPPMPV BMTI -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang BBPPMPV BMTI"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- CardView BBPPMPV BMTI -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageSlideTentang"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:contentDescription="Gambar BBPPMPV BMTI"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gedung" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BBPPMPV BMTI"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Pusat Pengembangan Guru Vokasi Nasional"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btnLihat1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Lihat Selengkapnya →"
                        android:textColor="#3F51B5"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Program Unggulan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageSlideProgram"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:contentDescription="Pelatihan Guru"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pelatihan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Program Unggulan"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Pelatihan guru, pengembangan kurikulum, hingga kemitraan industri yang mendorong link and match pendidikan vokasi."
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btnLihatProgram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Lihat Selengkapnya →"
                        android:textColor="#3F51B5"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lokasi & Fasilitas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageSlideFasilitas"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/rounded_top_only"
                    android:contentDescription="Fasilitas BMTI"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lokasi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Dan Fasilitas"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Berlokasi di Cimahi, BBPPMPV BMTI memiliki workshop, ruang kelas modern, dan laboratorium praktik terkini."
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btnLihatLokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Lihat Selengkapnya →"
                        android:textColor="#3F51B5"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tentang RPL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang RPL"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- CardView Tentang LKP RPL di Gedung ELITE -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTentangRPL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Gambar Header Full -->
                <ImageView
                    android:id="@+id/imageSlideRPL"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rpl1"
                android:clipToOutline="true" />

                <!-- Konten Teks -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Judul -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tentang LAB RPL di Gedung ELITE"
                        android:textColor="#2E3A59"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Deskripsi Singkat -->
                    <TextView
                        android:id="@+id/textDeskripsiRPL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LAB RPL yang terletak di Gedung ELITE BMTI merupakan pusat pelatihan modern yang dirancang untuk membekali peserta dengan keahlian praktis dalam bidang Rekayasa Perangkat Lunak. Dilengkapi fasilitas terkini dan lingkungan belajar yang nyaman."
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <!-- Tombol Aksi -->
                    <TextView
                        android:id="@+id/btnToggleDeskripsiRPL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Selengkapnya"
                        android:textColor="#3F51B5"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>






        <!-- Spacer Footer Agar Scroll Bisa Sampai Bawah -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
</ScrollView>
