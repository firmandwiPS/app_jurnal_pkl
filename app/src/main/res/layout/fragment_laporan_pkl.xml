<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvJudulLaporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Laporan PKL"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333"
        android:paddingBottom="16dp" />

    <!-- Pencarian dan Tambah -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:weightSum="10">

        <!-- Kolom Cari -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputCariLaporan"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:hint="Cari NIS..."
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="@color/black"
            app:boxStrokeColor="@color/bgcolor"
            app:boxStrokeWidth="2dp"
            app:boxBackgroundColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCariLaporan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tombol Tambah -->
        <Button
            android:id="@+id/btnTambahLaporan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginStart="8dp"
            android:text="Tambah"
            android:textAllCaps="false"
            android:backgroundTint="#FF6200EE"
            android:textColor="@android:color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:minEms="4"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Tabel -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <TableLayout
            android:id="@+id/tableLaporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp">

            <!-- Header statis jika mau -->
            <!--
            <TableRow android:background="#FF6200EE" android:padding="6dp">
                <TextView android:text="NIS" android:textColor="@android:color/white" android:padding="6dp"/>
                <TextView android:text="Laporan" android:textColor="@android:color/white" android:padding="6dp"/>
                <TextView android:text="Project" android:textColor="@android:color/white" android:padding="6dp"/>
                <TextView android:text="Nilai" android:textColor="@android:color/white" android:padding="6dp"/>
            </TableRow>
            -->
        </TableLayout>
    </HorizontalScrollView>

</LinearLayout>